<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="20"
    android:columnCount="3"
    >

    <Button

        android:layout_columnWeight="0.3"
        android:layout_rowWeight="0.3"
        android:text="1" />

    <Button

        android:layout_columnWeight="0.3"
        android:layout_rowWeight="0.3"
        android:text="2" />

    <Button
        android:layout_columnWeight="0.3"
        android:layout_rowWeight="0.3"
        android:text="3" />

    <Button
        android:layout_columnWeight="0.3"
        android:layout_rowWeight="0.3"

        android:text="4" />

    <Button
        android:layout_columnWeight="0.3"
        android:layout_rowWeight="0.3"
        android:text="5" />

    <Button
        android:layout_columnWeight="0.3"
        android:layout_rowWeight="0.3"

        android:text="6" />

    <Button
        android:layout_columnWeight="0.3"
        android:layout_rowWeight="0.3"
        android:text="7" />

    <Button
        android:layout_columnWeight="0.3"
        android:layout_rowWeight="0.3"
        android:text="8" />

    <Button
        android:layout_columnWeight="0.3"
        android:layout_rowWeight="0.3"
        android:text="9" />

    <Button
        android:layout_columnWeight="0.3"
        android:layout_rowWeight="0.3"
        android:text="0" />

    <Button
        android:layout_columnWeight="0.3"
        android:layout_rowWeight="0.3"
        android:text="+" />

    <Button
        android:layout_columnWeight="0.3"
        android:layout_rowWeight="0.3"
        android:text="-" />

    <Button
        android:layout_columnWeight="0.3"
        android:layout_rowWeight="0.3"
        android:text="*" />

    <Button
        android:layout_columnWeight="0.3"
        android:layout_rowWeight="0.3"
        android:text="/" />

    <Button
        android:layout_columnWeight="0.3"
        android:layout_rowWeight="0.3"
        android:text="=" />
    <Button
        android:id="@+id/button_1"
        android:layout_columnWeight="0.3"
        android:layout_rowWeight="0.3"
        android:layout_columnSpan="3"
        android:text="返回"
    />


</GridLayout>
